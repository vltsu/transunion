%div{:style => 'width: 220px; margin: 0px auto;'}
  = link_to image_tag("add_income_section_button.jpg", :border=>0), new_income_section_path, :class => 'editLink', :id => 'addIncome_sectionLink', :style => 'width: 300px; margin: 0px auto;'
%table
  %tr
    %th.th1 Статья прихода
    %th.th1 Открыть

  - @income_sections.each do |income_section|
    %tr{ :class => cycle('odd','even') }
      %td.th3= income_section.income_section
      %td.th3= link_to 'Открыть', income_section, :id => "showIncome_sectionLink"

%br
%div{ :style => 'width: 10%; margin: 0px auto;' }
  = will_paginate(@income_section, :previous_label => '&#8592;', :next_label => '&#8594;')
