%div{:style => 'width: 170px; margin: 0px auto;'}
  = link_to image_tag("add_car_model_button.jpg", :border=>0), new_car_model_path, :class => 'editLink', :id => 'addCar_modelLink', :style => 'width: 300px; margin: 0px auto;'
%table
  %tr
    %th.th1 Модель ТС
    %th.th1 Открыть

  - @car_models.each do |car_model|
    %tr{ :class => cycle('odd','even') }
      %td.th3= car_model.car_model
      %td.th3= link_to 'Открыть', car_model, :id => "showCar_modelLink"

%br
%div{ :style => 'width: 10%; margin: 0px auto;' }
  = will_paginate(@car_model, :previous_label => '&#8592;', :next_label => '&#8594;')
