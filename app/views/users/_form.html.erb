<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div style="width: 450px; margin: 0px auto;" id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <br />
  <% end %>
  <table>
    <tr>
      <td class="fieldName fieldInnerTopLeft">Фамилия:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :lastname, :class => "inp" %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Имя:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :firstname, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Отчество:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :middlename, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Должность</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">Должность:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :position, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Оклад:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :salary, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">% от перевозок:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :request_percent, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Премия(%):</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :premium_percent, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Общий стаж:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :global_experience, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Непрерывный стаж:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :unbroken_experience, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Выслуга лет:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :visluga_let, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Образование</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">ВУЗ:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :university, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Специальность:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :speciality, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Адрес</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">Город:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :city, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Район:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :district, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Улица:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :street, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Дом:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :house, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Корпус/лит:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :housing, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Квартира:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :apartment, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Контакты</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">Мобильный телефон рабочий:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :mobile_phone_business, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Мобильный телефон личный:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :mobile_phone_personal, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Домашний телефон:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :home_phone, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Email:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :email, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">ICQ:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :icq, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Skype:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :skype, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Паспортные данные</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">Гражданство:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :citizenship, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Дата рождения:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.date_select :date_of_birth, :start_year => Time.now.year, :end_year => 1940, :include_blank => true, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Адрес по паспорту:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :passport_address, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Паспорт серия:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :passport_series, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Паспорт номер:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :passport_address, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Паспорт дата выдачи:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.date_select :passport_issue_date, :start_year => Time.now.year, :end_year => 1970, :include_blank => true,  :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Паспорт кем выдан:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :passport_issue_whom, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Документы</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerTopLeft">ИНН:</td>
      <td class="fieldForm fieldInnerTopRight"><%= f.text_field :inn, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Пенсионное:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :pensionnoe, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerMiddleLeft">Мед. страховка:</td>
      <td class="fieldForm fieldInnerMiddleRight"><%= f.text_field :medical_insurance, :class => "inp"  %></td>
    </tr>
    <tr>
      <td class="fieldName fieldInnerBottomLeft">Трудовой договор:</td>
      <td class="fieldForm fieldInnerBottomRight"><%= f.text_field :working_contract, :class => "inp"  %></td>
    </tr>
    <tr>
      <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Дополнительно</span></td>
    </tr>
    <tr>
      <td class="fieldName fieldBothLeft">Примечание:</td>
      <td class="fieldForm fieldBothRight"><%= f.text_area :about, :size => "28x5", :class => "inp"  %></td>
    </tr>
    <tr>
      <td colspan="2" align="center" class="borNone"><%= f.submit "Сохранить" %></td>
    </tr>
  </table>
<% end %>
