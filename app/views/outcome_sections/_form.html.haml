= form_for @outcome_section do |f|
  -if @outcome_section.errors.any?
    %div{:style => "width: 450px; margin: 0px auto;", :id => "error_explanation"}
      %h2{:align=>'center'} Чтобы сохранить:
      - @outcome_section.errors.each do |key,message|
        = message
        %br/
    %br/

  %table
    %tr
      %td{:class => 'fieldName fieldBothLeft'} Статья расходов:
      %td{:class => 'fieldForm fieldBothRight'}= f.text_field :outcome_section, :class => 'inp'
    -# Не показывать кнопку сохранить для просмотра карточки
    - if !(params[:action] == 'show')
      %tr
        %td{:colspan=>'2', :align=>'center', :class=>'borNone'}= f.submit 'Сохранить'
