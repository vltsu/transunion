  %p#customerRateSverhPriceService= @request.customer_rate_sverh_price
  %p#customerRateSverhCountService= @request.customer_rate_sverh_count
  %p#customerRateSverhSummService= @request.customer_rate_sverh_summ
  %p#customerRateTotalSummService= @request.customer_rate_total_summ
  %p#carrierRateSummService= @request.carrier_rate_summ
  %p#carrierRateHoursService= @request.carrier_rate_hours
  %p#carrierRatePodachaHoursService= @request.carrier_rate_podacha_hours
  %p#carrierRateHourPriceService= @request.carrier_rate_hour_price
  %p#carrierRateSverhCountService= @request.carrier_rate_sverh_count
  %p#carrierRateSverhPriceService= @request.carrier_rate_sverh_price
