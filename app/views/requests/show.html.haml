%h1{:class => "tableTitle", :style => "width: 450px; margin: 0px auto; color:red;"} Просмотр заявки
%br/
- content_for(:head) do
  = javascript_include_tag 'disableForms'
- if notice
  = render :partial => "shared/notice", :locals => { :notice => notice }
%br/
= render 'form'
%br/
%br/

%div{:style =>"width: 900px; margin: 0px auto;"}
  = link_to image_tag("saveAsButton.jpg"), save_as_path(@request), :id => 'saveAsRequestLink'
  -# Показывать кнопку редактировать админам; менеджерам если только она не закрыта
  - if admin? || !@request.is_finished
    = link_to image_tag("editButton.jpg"), edit_request_path(@request), :id => 'editRequestLink'
  - if admin?
    = link_to image_tag("deleteButton.jpg"), @request, :confirm => 'Вы уверены', :id => 'deleteRequestLink', :method => :delete
%br/
%br/
%div{:style => "width: 600px; margin: 0px auto;"}
  = link_to image_tag("requestCustomerButton1.jpg"), customer_doc_path
  = link_to image_tag("requestCarrierButton.jpg"),   carrier_doc_path
%br/
%div{:style => "width: 200px; margin: 0px auto;"}
  = link_to 'к списку заявок', requests_path
%br/

%div{:style => "display:none;"}
