= form_for @car_tonnage do |f|
  -if @car_tonnage.errors.any?
    %div{:style => "width: 450px; margin: 0px auto;", :id => "error_explanation"}
      %h2{:align=>'center'} Чтобы сохранить:
      - @car_tonnage.errors.each do |key,message| 
        = message
        %br/
    %br/

  %table
    %tr
      %td{:class => 'fieldName fieldBothLeft'} Тоннаж:
      %td{:class => 'fieldForm fieldBothRight'}!= "#{f.text_field :car_tonnage, :class => 'inp', :size =>6} тонн"
    -# Не показывать кнопку сохранить для просмотра карточки
    - if !(params[:action] == 'show')
      %tr
        %td{:colspan=>'2', :align=>'center', :class=>'borNone'}= f.submit 'Сохранить'
