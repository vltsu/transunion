- if notice
  = render :partial => "shared/notice", :locals => { :notice => notice }
%div{:style => 'width: 230px; margin: 0px auto;'}
  = link_to image_tag("add_company_face_button.jpg", :border=>0), new_company_face_path, :class => 'editLink', :id => 'addCompany_faceLink', :style => 'width: 300px; margin: 0px auto;'
%table
  %tr
    %th.th1 Компания в лице
    %th.th1 Открыть

  - @company_faces.each do |company_face|
    %tr{ :class => cycle('odd','even') }
      %td.th3= company_face.company_face
      %td.th3= link_to 'Открыть', company_face, :id => "showCompany_faceLink"

%br
%div{ :style => 'width: 10%; margin: 0px auto;' }
  = will_paginate(@company_face, :previous_label => '&#8592;', :next_label => '&#8594;')
