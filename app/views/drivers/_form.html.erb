<%= form_for(@driver) do |f| %>

  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>
      <ul>
        <% @driver.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
      <tr>
          <td class="fieldName">Фамилия:</td>
          <td class="fieldForm"><%= f.text_field :lastname, :class => "inp" %></td>
      </tr>
      <tr>
          <td class="fieldName">Имя:</td>
          <td class="fieldForm"><%= f.text_field :firstname, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Отчество:</td>
          <td class="fieldForm"><%= f.text_field :middlename, :class => "inp"  %></td>
      </tr>
      <tr>
          <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Компания</span></td>
      </tr>
      <tr>
          <td class="fieldName">Компания:</td
          <td class="fieldForm"><%= f.collection_select :carrier_company_id, CarrierCompany.find(:all), :id, :title, :include_blank => true %></td>
      </tr>
      <tr>
          <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Адрес</span></td>
      </tr>
      <tr>
          <td class="fieldName">Регион:</td>
          <td class="fieldForm"><%= f.text_field :region, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Город:</td>
          <td class="fieldForm"><%= f.text_field :city, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Район:</td> 
          <td class="fieldForm"><%= f.text_field :district, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Улица:</td>
          <td class="fieldForm"><%= f.text_field :street, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Тип:</td>
          <td class="fieldForm"><%= f.text_field :type, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Дом:</td>
          <td class="fieldForm"><%= f.text_field :house, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Корпус/лит:</td>
          <td class="fieldForm"><%= f.text_field :housing, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Квартира:</td>
          <td class="fieldForm"><%= f.text_field :apartment, :class => "inp"  %></td>
      </tr>
      <tr>
          <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Контакты</span></td>
      </tr>
      <tr>
          <td class="fieldName">Мобильный телефон:</td>
          <td class="fieldForm"><%= f.text_field :mobile_phone, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Домашний телефон:</td>
          <td class="fieldForm"><%= f.text_field :home_phone, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Email:</td>
          <td class="fieldForm"><%= f.text_field :email, :class => "inp"  %></td>
      </tr>
      <tr>
          <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Паспортные данные</span></td>
      </tr>
      <tr>
          <td class="fieldName">Гражданство:</td>
          <td class="fieldForm"><%= f.text_field :citizenship, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Дата рождения:</td>
          <td class="fieldForm"><%= f.date_select :date_of_birth, :start_year => Time.now.year, :end_year => 1940, :include_blank => true %></td>
      </tr>
      <tr>
          <td class="fieldName">Паспорт серия:</td>
          <td class="fieldForm"><%= f.text_field :passport_series, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Паспорт номер:</td>
          <td class="fieldForm"><%= f.text_field :passport_number, :class => "inp"  %></td>
      </tr>
      <tr>
          <td class="fieldName">Паспорт дата выдачи:</td>
          <td class="fieldForm"><%= f.date_select :passport_issue_date, :start_year => Time.now.year, :end_year => 1970, :include_blank => true %></td>
      </tr>
      <tr>
          <td class="fieldName">Паспорт кем выдан:</td>
          <td class="fieldForm"><%= f.text_field :passport_issue_whom, :class => "inp"  %></td>
      </tr>
      <tr>
          <td style="border-width: 0px;border:none none;" align="center" colspan="2"><span style="font-style: italic; text-decoration: underline;">Дополнительно</span></td>
      </tr>
      <tr>
          <td class="fieldName">Медицинская книжка:</td>
          <td class="fieldForm"><%= f.check_box :med_book %></td>
      </tr>
      <tr>
          <td class="fieldName">Примечание:</td>
          <td class="fieldForm"><%= f.text_field :about, :class => "inp"  %></td>
      </tr>
      <tr>
          <td colspan="2" align="center" class="borNone"><%= f.submit "Сохранить" %></td>
      </tr>
  </table>
<% end %>  
