<h1 class="tableTitle" style="width: 450px; margin: 0px auto; color:red;">Просмотр карточки водителя</h1>
<br />

<%- content_for(:head) do -%>
<%= javascript_include_tag 'disableForms' -%>
<%- end -%>
<% if notice %>
  <br />
  <div id="notice"><%= notice %></div>
  <br />
<% end %>
<%= render 'form' %>

<br /><br />
<div style="width: 600px; margin: 0px auto;">
  <%= link_to image_tag("editButton.jpg"), edit_driver_path(@driver), :id => 'editDriverLink' %> 
  <%= link_to image_tag("deleteButton.jpg"), @driver, :confirm => 'Вы уверены', :id => 'deleteDriverLink', :method => :delete %>
</div>
<br />
<div style="width: 200px; margin: 0px auto;">
  <%= link_to 'к списку водителей', drivers_path %>
</div>
