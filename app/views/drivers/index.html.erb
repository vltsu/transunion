<div>
  <p>
    <%= link_to 'Добавить водителя', new_driver_path, :class => 'editLink' %>
  </p>
</div>
<table>
  <tr>
    <th class="th1">№</th>
    <th class="th1">ФИО</th>
    <th class="th1">Компания</th>
    <th class="th1">Город</th>
    <th class="th1">моб.тел.</th>
    <th class="th1">Редактировать</th>
    <th class="th1">Удалить</th>
  </tr>
  <% @drivers.each do |driver| %>
    <tr <%= cycle('class=odd','class=even') %>>    
      <td class="th3"><%= driver.id %></td>
      <td class="th3"><%= driver.lastname+' '+driver.firstname+' '+driver.middlename %></td>
      <td class="th3"><%= driver.carrier_company.title %></td>
      <td class="th3"><%= driver.city %></td>
      <td class="th3"><%= driver.mobile_phone %></td>
      <td class="th3"><%= link_to 'Редактировать', edit_driver_path(driver) %></td>
      <td class="th3"><%= link_to 'Удалить', driver, :confirm => 'Вы уверены?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
